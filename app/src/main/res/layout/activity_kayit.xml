<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bir"
    tools:context=".Kayit">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"


            android:layout_gravity="center"
            android:layout_height="150dp"
            android:src="@drawable/ikii"/>

        <ImageView
            android:id="@+id/b2"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/b1"


            android:layout_height="150dp"
            android:src="@drawable/ucc" />

        <EditText

            android:id="@+id/eposta"
            android:layout_width="212dp"
            android:layout_height="98dp"
            android:backgroundTint="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/b2"

            android:hint="E-Mail Adress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="432dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="212dp"
            android:layout_below="@+id/eposta"

            android:layout_height="98dp"
            android:backgroundTint="#FFFFFF"
            android:hint="Password"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="513dp" />



        <Button
            android:id="@+id/register"
            android:layout_width="152dp"
            android:layout_below="@+id/password"

            android:layout_height="46dp"
            android:textColor="@color/black"
            android:text="KayÄ±t Ol"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            app:backgroundTint="#FED32C"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="635dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>