<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bir"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"


            android:layout_gravity="center"
            android:layout_height="150dp"
            android:src="@drawable/ikii"/>

        <ImageView
            android:id="@+id/b2"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/b1"


            android:layout_height="150dp"
            android:src="@drawable/ucc" />



        <Button
            android:id="@+id/girisYap"
            android:layout_width="152dp"
            android:layout_below="@+id/sifre"

            android:layout_height="46dp"
            android:textColor="@color/black"
            android:text="Login"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            app:backgroundTint="#FED32C"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="635dp" />

        <Button
            android:id="@+id/kayitOl"
            android:layout_width="152dp"
            android:layout_below="@+id/girisYap"

            android:layout_height="46dp"
            android:textColor="@color/black"
            android:text="Register"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            app:backgroundTint="#FED32C"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="635dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>